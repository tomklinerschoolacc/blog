<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <p>
    <strong>Updated:</strong>
    <%= time_tag post.updated_at, "data-format": "%B %e, %Y %l:%M%P", 
    "data-local": "time" %>
  </p>

</div>
